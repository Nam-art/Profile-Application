@model Activity3_2.Models.ProductModel

<div class="card text-white bg-primary mb-3" style="width: 20rem;">
    <img src="https://i.pravatar.cc/150?u=@Model.Id" class="card-img-top" alt="@Model.Name">
    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Html.DisplayFor(m => Model.Price)</p>
        <p class="card-text">@Model.Description</p>
        <a href="/Product/ShowDetails/@Model.Id" class="btn btn-info">Details</a>
        <a href="/Product/EditForm/@Model.Id" class="btn btn-warning">Edit</a>
        <a href="/Product/Delete/@Model.Id" class="btn btn-danger">Delete</a>
        <!-- Button trigger modal -->
        <button value="@Model.Id" type="button" class="btn btn-primary edit-product-button" data-toggle="modal" data-target="#editModal">
            Edit Modal
        </button>

    </div>
</div>